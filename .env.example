# ============================================================================
# NewsMinds Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to git!
# ============================================================================

# ----------------------------------------------------------------------------
# Azure Configuration
# ----------------------------------------------------------------------------
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id

# ----------------------------------------------------------------------------
# PostgreSQL
# ----------------------------------------------------------------------------
POSTGRES_ADMIN_LOGIN=newsmindsadmin
POSTGRES_ADMIN_PASSWORD=your-secure-password-here

# ----------------------------------------------------------------------------
# Application Configuration (populated after deployment)
# ----------------------------------------------------------------------------
# KEY_VAULT_URL=https://newsmindskv.vault.azure.net/
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...
# REDIS_CONNECTION_STRING=rediss://:password@hostname:6380
# POSTGRES_CONNECTION_STRING=postgresql://user:pass@host:5432/db
