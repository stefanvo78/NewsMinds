    "location": {
      "type": "string",
      "metadata": {
        "description": "Azure region"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply"
      }
    },
    "addressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "VNet address space"
      }
    },
    "containerAppsSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/23",
      "metadata": {
        "description": "Container Apps subnet address prefix"
      }
    },
    "sqlSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.2.0/24",
      "metadata": {
        "description": "SQL subnet address prefix"
      }
    },
    "keyVaultSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.3.0/24",
      "metadata": {
        "description": "Key Vault subnet address prefix"
      }
    },
    "allowedIPs": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "Allowed IP addresses for NSG rules"
      }
    }
  },
  "variables": {
    "copy": [
      {
        "name": "allowedIPsCidr",
        "count": "[length(parameters('allowedIPs'))]",
        "input": "[if(endsWith(parameters('allowedIPs')[copyIndex('allowedIPsCidr')], '/32'), parameters('allowedIPs')[copyIndex('allowedIPsCidr')], format('{0}/32', parameters('allowedIPs')[copyIndex('allowedIPsCidr')]))]"
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2023-11-01",
      "name": "[format('{0}-nsg', parameters('name'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowHTTPSFromAllowedIPs",
            "properties": {
              "priority": 100,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourceAddressPrefixes": "[if(empty(parameters('allowedIPs')), createArray('0.0.0.0/0'), variables('allowedIPsCidr'))]",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "443"
            }
          },
          {
            "name": "AllowAzureLoadBalancer",
            "properties": {
              "priority": 110,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "*",
              "sourceAddressPrefix": "AzureLoadBalancer",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "*"
            }
          },
          {
            "name": "AllowVNetInbound",
            "properties": {
              "priority": 120,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "VirtualNetwork",
              "destinationPortRange": "*"
            }
          },
          {
            "name": "DenyAllInbound",
            "properties": {
              "priority": 4096,
              "direction": "Inbound",
              "access": "Deny",
              "protocol": "*",
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "*"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2023-11-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "container-apps",
            "properties": {
              "addressPrefix": "[parameters('containerAppsSubnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', format('{0}-nsg', parameters('name')))]"
              },
              "delegations": [
                {
                  "name": "Microsoft.App.environments",
                  "properties": {
                    "serviceName": "Microsoft.App/environments"
                  }
                }
              ]
            }
          },
          {
            "name": "sql",
            "properties": {
              "addressPrefix": "[parameters('sqlSubnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', format('{0}-nsg', parameters('name')))]"
              },
              "privateEndpointNetworkPolicies": "Disabled"
            }
          },
          {
            "name": "keyvault",
            "properties": {
              "addressPrefix": "[parameters('keyVaultSubnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', format('{0}-nsg', parameters('name')))]"
              },
              "privateEndpointNetworkPolicies": "Disabled"
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', format('{0}-nsg', parameters('name')))]"
      ]
    }
  ],
  "outputs": {
    "id": {
      "type": "string",
      "metadata": {
        "description": "VNet resource ID"
      },
      "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('name'))]"
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "VNet name"
      },
      "value": "[parameters('name')]"
    },
    "containerAppsSubnetId": {
      "type": "string",
      "metadata": {
        "description": "Container Apps subnet ID"
      },
      "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', parameters('name')), '2023-11-01').subnets[0].id]"
    },
    "sqlSubnetId": {
      "type": "string",
      "metadata": {
        "description": "SQL subnet ID"
      },
      "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', parameters('name')), '2023-11-01').subnets[1].id]"
    },
    "keyVaultSubnetId": {
      "type": "string",
      "metadata": {
        "description": "Key Vault subnet ID"
      },
      "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', parameters('name')), '2023-11-01').subnets[2].id]"
    },
    "nsgId": {
      "type": "string",
      "metadata": {
        "description": "NSG ID"
      },
      "value": "[resourceId('Microsoft.Network/networkSecurityGroups', format('{0}-nsg', parameters('name')))]"
    }
  }
}